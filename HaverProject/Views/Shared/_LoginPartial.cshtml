@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa-solid fa-user fa-2x"></i>  @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-light"><i class="fa-solid fa-power-off fa-2x"></i></button>
        </form>
    </li>
}
else
{
   <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login" title="Login"><i class="fa-solid fa-right-to-bracket fa-2x"></i></a>
   </li>
@*    <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register" title="Register"><i class="fa-regular fa-registered fa-2x"></i></a>
    </li>
*@}
</ul>
